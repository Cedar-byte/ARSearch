<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white">

        <RelativeLayout
            android:id="@+id/rel_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="修改密码"
                android:textColor="@color/gray_text_item"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="23.9dp"
                android:layout_height="23.9dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.1dp"
                android:src="@drawable/icon_arrow_right"/>

        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="19dp"
        android:background="@color/gray_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_white">

        <RelativeLayout
            android:id="@+id/rel_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="19dp"
                android:text="清除缓存"
                android:textColor="@color/gray_text_item"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_cache_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16.1dp"
                android:text="100M"
                android:textColor="@color/gray_text_item"
                android:textSize="14sp"/>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_white"
        android:layout_marginTop="29dp">

        <RelativeLayout
            android:id="@+id/rel_logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="19dp"
                android:text="退出当前帐号"
                android:textColor="@color/color_red_text"
                android:textSize="14sp"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
