<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_bg">

    <include layout="@layout/toolbar_"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.填写手机号"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_green"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="38dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2.输入验证码"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_hint"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="38dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="3.设置密码"
            android:textColor="@color/gray_hint"
            android:textSize="12sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="75dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_phone_num"/>

        <EditText
            android:id="@+id/edt_phone_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="46dp"
            android:background="@null"
            android:hint="@string/string_mobile_num"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:textColorHint="@color/gray_hint"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_hint"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_get_verifyCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="72dp"
        android:text="获取验证码"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:background="@drawable/selector_btn_bg_green"
        android:enabled="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="17dp">

        <LinearLayout
            android:id="@+id/linear_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/selector_btn_bg_register"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_gou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gou"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv"
            android:layout_toRightOf="@+id/linear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:layout_marginLeft="16dp"
            android:textColor="@color/gray_hint"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_toRightOf="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/green"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>
